<!-- Include Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Manage Quizzes</h2>
        <!-- Modal trigger button -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addQuizModal">
            <i class="bi bi-plus-circle me-1"></i> Add Quiz
        </button>
    </div>

    <div class="table-responsive shadow rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Time Limit</th>
                    <th>No of Questions</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% quizzes.forEach(quiz=> { %>
                    <tr>
                        <td>
                            <%= quiz.title %>
                        </td>
                        <td>
                            <%= quiz.category %>
                        </td>
                        <td>
                            <%= quiz.time_limit %> mins
                        </td>
                        <td>
                            <%= quiz.num_questions %>
                        </td>
                        <td>
                            <a href="/admin/quizzes/edit/<%= quiz.id %>" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="/admin/quizzes/delete/<%= quiz.id %>" class="btn btn-sm btn-danger me-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a href="/admin/questions/<%= quiz.id %>" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-question-circle"></i> Questions
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- Add Quiz Modal -->
<div class="modal fade" id="addQuizModal" tabindex="-1" aria-labelledby="addQuizModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow">
            <form action="/admin/quizzes/add" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="addQuizModalLabel">Add New Quiz</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="title" class="form-label">Quiz Title</label>
                        <input type="text" id="title" name="title" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category / Domain</label>
                        <select id="category" name="category" class="form-select" required>
                            <option value="" selected disabled>Select a category</option>
                            <option value="World History">World History</option>
                            <option value="Technology">Technology</option>
                            <option value="Science">Science</option>
                            <option value="Geography">Geography</option>
                            <option value="Literature & Books">Literature & Books</option>
                            <option value="Movies & Hollywood">Movies & Hollywood</option>
                            <option value="Music & Bands">Music & Bands</option>
                            <option value="Sports">Sports</option>
                            <option value="Famous Inventors & Discoveries">Famous Inventors & Discoveries</option>
                            <option value="Politics & Current Affairs">Politics & Current Affairs</option>
                            <option value="Mythology">Mythology</option>
                            <option value="Disney & Animated Movies">Disney & Animated Movies</option>
                            <option value="Harry Potter & Fantasy Worlds">Harry Potter & Fantasy Worlds</option>
                            <option value="Marvel & DC Superheroes">Marvel & DC Superheroes</option>
                            <option value="TV Shows">TV Shows</option>
                            <option value="K-Pop & Global Music">K-Pop & Global Music</option>
                            <option value="Video Games">Video Games</option>
                            <option value="Celebrities & Gossip">Celebrities & Gossip</option>
                            <option value="Memes & Internet Culture">Memes & Internet Culture</option>
                            <option value="Comics & Cartoons">Comics & Cartoons</option>
                            <option value="Awards">Awards</option>
                            <option value="Space & Astronomy">Space & Astronomy</option>
                            <option value="Biology & Human Body">Biology & Human Body</option>
                            <option value="Chemistry & Elements">Chemistry & Elements</option>
                            <option value="Physics & Laws of Motion">Physics & Laws of Motion</option>
                            <option value="Artificial Intelligence (AI)">Artificial Intelligence (AI)</option>
                            <option value="Robotics & Futuristic Tech">Robotics & Futuristic Tech</option>
                            <option value="Computer Programming">Computer Programming</option>
                            <option value="Medical & Health Science">Medical & Health Science</option>
                            <option value="Environmental Science">Environmental Science</option>
                            <option value="Inventions & Gadgets">Inventions & Gadgets</option>
                            <option value="Food & Cuisine">Food & Cuisine</option>
                            <option value="Travel & Tourism">Travel & Tourism</option>
                            <option value="Fashion & Brands">Fashion & Brands</option>
                            <option value="Cars & Automobiles">Cars & Automobiles</option>
                            <option value="Pets & Animals">Pets & Animals</option>
                            <option value="Art & Paintings">Art & Paintings</option>
                            <option value="Psychology & Human Behavior">Psychology & Human Behavior</option>
                            <option value="Riddles & Brain Teasers">Riddles & Brain Teasers</option>
                            <option value="True or False Challenges">True or False Challenges</option>
                            <option value="Would You Rather?">Would You Rather?</option>
                            <option value="Business & Economics">Business & Economics</option>
                            <option value="Mathematics & Puzzles">Mathematics & Puzzles</option>
                            <option value="Military & Wars">Military & Wars</option>
                            <option value="Cryptocurrency & Blockchain">Cryptocurrency & Blockchain</option>
                            <option value="Ancient Civilizations">Ancient Civilizations</option>
                            <option value="Languages & Linguistics">Languages & Linguistics</option>
                            <option value="Religion & Spirituality">Religion & Spirituality</option>
                            <option value="Law & Constitution">Law & Constitution</option>
                            <option value="Survival & Extreme Situations">Survival & Extreme Situations</option>
                            <option value="Unexplained Mysteries">Unexplained Mysteries</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="time_limit" class="form-label">Time Limit (in minutes)</label>
                        <input type="number" id="time_limit" name="time_limit" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="num_questions" class="form-label">Number of Questions</label>
                        <input type="number" id="num_questions" name="num_questions" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Quiz
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

