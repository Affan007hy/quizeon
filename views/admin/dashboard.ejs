<%- include('adminHeader.ejs') %>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="text-center">
      <img src="/images/default-profile-pic.jpeg" alt="Admin Icon" class="profile-image">
      <h5>Welcome!</h5>
      <h5>Admin</h5>
    </div>
    <ul class="nav flex-column mt-4">
      <li class="nav-item">
        <a class="nav-link" href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/users"><i class="fas fa-users"></i> Users</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/quizzes"><i class="fas fa-question-circle"></i> Quizzes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
      </li>
    </ul>
  </div>

  <!-- Top Navbar -->
  <div class="top-navbar">
    <button class="logout-btn" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>
  </div>

  <!-- Main Content -->
  <div class="content main-content">
    <div class="card">
      <div class="card-body">
        <h4 class="mb-4">Admin Dashboard</h4>
        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary">
              <div class="card-body">
                <h5 class="card-title">
                  <%= data.totalUsers %>
                </h5>
                <p class="card-text">Total Users</p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card text-white bg-success">
              <div class="card-body">
                <h5 class="card-title">
                  <%= data.totalQuizzes %>
                </h5>
                <p class="card-text">Total Quizzes</p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="card text-white bg-warning">
              <div class="card-body">
                <h5 class="card-title">
                  <%= data.totalQuestions %>
                </h5>
                <p class="card-text">Total Questions</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- JS Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <!-- <script src="<%=BASE_URL%>js/admin/admin.js"></script> -->
  <script>
    $('#logout-btn').click(function () {
      if (confirm('Are you sure you want to logout?')) {
        window.location.href = '<%=BASE_URL%>logout';
      }
    });
  </script>

</body>

</html>
