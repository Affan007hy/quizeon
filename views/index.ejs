<%- include('includes/header.ejs') %>
    </head>

    <body>
        <div class="hero">
            <%- include('includes/navigation.ejs') %>
                </nav>

                <!-- Hero Section -->
                <section class="text-center text-white d-flex align-items-center" style="height: 70vh;">
                    <div class="container">
                        <p>Test your knowledge, challenge<br>your friends!</p>
                        <p style="font-size: 1.2rem;"><i>Free quizzes to enhance your skills.</i></p>
                    </div>
                </section>
        </div>

        <!-- Daily Challenge Section -->
        <section class="daily-challenge py-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <div class="challenge-card p-4 shadow-lg rounded-3"
                            style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                            <div class="text-white">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge bg-white text-primary">Today's Challenge</span>
                                    <span class="text-white-50">Day 14</span>
                                </div>
                                <h3 class="text-white mb-3">The Time Trial</h3>
                                <div class="progress mb-3" style="height: 8px;">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 65%;"
                                        aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="d-flex justify-content-between text-white-50 mb-4">
                                    <span>65% completed</span>
                                    <span>350 XP available</span>
                                </div>
                                <div class="challenge-stats d-flex justify-content-around text-center text-white">
                                    <div>
                                        <div class="fs-2 fw-bold">7</div>
                                        <div class="small">Questions</div>
                                    </div>
                                    <div>
                                        <div class="fs-2 fw-bold">90</div>
                                        <div class="small">Seconds</div>
                                    </div>
                                    <div>
                                        <div class="fs-2 fw-bold">3.5</div>
                                        <div class="small">Difficulty</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-7">
                        <h2 class="mb-4">Daily Knowledge Challenge</h2>
                        <p class="lead mb-4">Test your skills with our unique daily challenge that adapts to your
                            performance and gets smarter over time.</p>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="feature-card p-3 h-100 border rounded">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-circle bg-primary text-white me-3">
                                            <i class="fas fa-brain"></i>
                                        </div>
                                        <h5 class="mb-0">Adaptive Difficulty</h5>
                                    </div>
                                    <p class="mb-0">Questions adjust based on your previous answers to keep you
                                        challenged.</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="feature-card p-3 h-100 border rounded">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-circle bg-success text-white me-3">
                                            <i class="fas fa-chart-line"></i>
                                        </div>
                                        <h5 class="mb-0">Progress Tracking</h5>
                                    </div>
                                    <p class="mb-0">Watch your knowledge grow with detailed analytics and insights.</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="feature-card p-3 h-100 border rounded">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-circle bg-info text-white me-3">
                                            <i class="fas fa-trophy"></i>
                                        </div>
                                        <h5 class="mb-0">Achievements</h5>
                                    </div>
                                    <p class="mb-0">Earn badges and rewards for consistent participation.</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="feature-card p-3 h-100 border rounded">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="icon-circle bg-warning text-white me-3">
                                            <i class="fas fa-users"></i>
                                        </div>
                                        <h5 class="mb-0">Community</h5>
                                    </div>
                                    <p class="mb-0">Compare your progress with friends and the community.</p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button class="btn btn-primary btn-lg me-2">Start Today's Challenge</button>
                            <button class="btn btn-outline-secondary">How It Works</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <style>
            .daily-challenge {
                background-color: #f8f9fa;
            }

            .challenge-card {
                transition: transform 0.3s ease;
            }

            .challenge-card:hover {
                transform: translateY(-5px);
            }

            .icon-circle {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .challenge-stats {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
                padding: 15px;
            }
        </style>

        <!-- Popular Quizzes Section -->
        <section class="popular-quizzes py-5 bg-light">
            <div class="container">
                <h2 class="text-center mb-4" id="P-quizzes">Popular Quizzes</h2>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">General Knowledge Quiz</h5>
                            <small>Players: 1,200</small>
                        </div>
                        <p class="mb-1">Category: General Knowledge</p>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Technology Quiz</h5>
                            <small>Players: 900</small>
                        </div>
                        <p class="mb-1">Category: Technology</p>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">Science Quiz</h5>
                            <small>Players: 750</small>
                        </div>
                        <p class="mb-1">Category: Science</p>
                    </a>
                </div>
            </div>
        </section>

        <!--Footer Sect-->
        <footer class="pt-5 pb-3">
            <%- include('includes/footer.ejs') %>
        </footer>

        <!-- Bootstrap JS and dependencies -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>