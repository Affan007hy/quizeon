    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizeon</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="<%=BASE_URL%>images/favi-cropped.PNG">
    <!-- Custom css -->
    <link rel="stylesheet" href="<%=BASE_URL%>css/styles.css">
</head>

<body>
    <div class="hero">
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent Custom">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand text-white" href="<%=BASE_URL%>">
                    <img src="<%=BASE_URL%>images/favi-cropped.PNG" alt="Logo" style="height: 40px;">
                    Quizeon
                </a>

                <!-- Hamburger Menu (for mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Items -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" aria-current="page" href="<%=BASE_URL%>">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#quizzes">Quizzes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#P-quizzes">Popular Quizzes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="<%=BASE_URL%>login"><i class="fa fa-sign-in"
                                    style="padding-right: 0.2rem;"></i>Sign
                                in</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <section class="text-center text-white d-flex align-items-center" style="height: 70vh;">
            <div class="container">
                <p>Test your knowledge, challenge<br>your friends!</p>
                <a href="#" class="btn btn-warning btn-lg mt-1">Start Quiz</a>
                <p style="font-size: 1.2rem;"><i>Free quizzes to enhance your skills.</i></p>
            </div>
        </section>
    </div>


    <!-- Featured Quizzes Section -->
    <section class="featured-quizzes py-5">
        <div class="container">
            <h2 class="text-center mb-4" id="quizzes">Featured Quizzes</h2>

            <div class="container mt-5">
                <div class="row">
                    <!-- Card 1 -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="position-relative">
                                <img src="https://cache.careers360.mobi/media/article_images/2022/10/14/Quiz-On-History-Of-India.jpg"
                                    class="card-img-top" alt="Quiz Thumbnail">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">History Quiz</h5>
                                <p class="card-text text-muted">Category: History</p>
                                <p class="card-text text-muted">Questions: 10</p>
                                <p class="card-text text-muted">Rating: 4.5/5</p>
                                <button class="btn btn-primary w-100">Start Quiz</button>
                            </div>
                        </div>
                    </div>

                    <!-- Card 2 -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="position-relative">
                                <img src="https://media.proprofs.com/images/QM/user_images/1826446/1636436180.jpg"
                                    class="card-img-top" alt="Quiz Thumbnail">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Science Quiz</h5>
                                <p class="card-text text-muted">Category: Science</p>
                                <p class="card-text text-muted">Questions: 15</p>
                                <p class="card-text text-muted">Rating: 4.8/5</p>
                                <button class="btn btn-primary w-100">Start Quiz</button>
                            </div>
                        </div>
                    </div>

                    <!-- Card 3 -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="position-relative">
                                <img src="https://t3.ftcdn.net/jpg/02/78/42/76/360_F_278427683_zeS9ihPAO61QhHqdU1fOaPk2UClfgPcW.jpg"
                                    class="card-img-top" alt="Quiz Thumbnail" height="180px">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Sports Quiz</h5>
                                <p class="card-text text-muted">Category: Sports</p>
                                <p class="card-text text-muted">Questions: 20</p>
                                <p class="card-text text-muted">Rating: 4.7/5</p>
                                <button class="btn btn-primary w-100">Start Quiz</button>
                            </div>
                        </div>
                    </div>

                    <!-- Card 4 -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="position-relative">
                                <img src="https://quizizz.com/media/resource/gs/quizizz-media/quizzes/6a67470a-6a86-48a2-8beb-189a45c4f0e7"
                                    class="card-img-top" alt="Quiz Thumbnail" height="170px">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">English Quiz</h5>
                                <p class="card-text text-muted">Category: English</p>
                                <p class="card-text text-muted">Questions: 20</p>
                                <p class="card-text text-muted">Rating: 4.5/5</p>
                                <button class="btn btn-primary w-100">Start Quiz</button>
                            </div>
                        </div>
                    </div>

                    <!-- Card 5 -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="position-relative">
                                <img src="https://easyshiksha.com/online_courses/assets/images/kids-learning/gk-class-3-bg.png"
                                    class="card-img-top" alt="Quiz Thumbnail" height="170px">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">General Knowledge Quiz</h5>
                                <p class="card-text text-muted">Category: General Knowledge</p>
                                <p class="card-text text-muted">Questions: 20</p>
                                <p class="card-text text-muted">Rating: 4.9/5</p>
                                <button class="btn btn-primary w-100">Start Quiz</button>
                            </div>
                        </div>
                    </div>

                    <!-- Card 4 -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="position-relative">
                                <img src="https://media.proprofs.com/images/QM/user_images/2503852/New%20Project%20(61)(211).jpg"
                                    class="card-img-top" alt="Quiz Thumbnail" height="170px">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Mixed Quiz</h5>
                                <p class="card-text text-muted">Category: Common</p>
                                <p class="card-text text-muted">Questions: 30</p>
                                <p class="card-text text-muted">Rating: 4.7/5</p>
                                <button class="btn btn-primary w-100">Start Quiz</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
