<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard - Quizeon</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="<%=BASE_URL%>css/dashboard.css">
    <link rel="icon" type="image/x-icon" href="<%=BASE_URL%>public/icons/favi-cropped.PNG">
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center">
            <img src="/images/default-profile-pic.jpeg" alt="Profile Photo" class="profile-image">
            <h5>Welcome!</h5>
            <h5>
                <%= user.name %>
            </h5>
        </div>
        <ul class="nav flex-column mt-4">
            <li class="nav-item">
                <a class="nav-link" id="profile-link"><i class="fas fa-user"></i> Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/dashboard/quizzes"><i class="fas fa-question-circle"></i> Quizzes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/dashboard/change-password"><i class="fas fa-lock"></i> Change Password</a>
              </li>              
        </ul>
    </div>

    <!-- Top Navbar -->
    <div class="top-navbar">
        <button class="logout-btn" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>
    </div>

    <!-- Main Content -->
    <div class="content main-content">
        <div class="card">
            <div class="card-body" id="content">
            </div>
        </div>
    </div>

    <script>

    </script>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="<%=BASE_URL%>js/dashboard.js"></script>
    <script>
        const user = <%- JSON.stringify(user) %>;

        $('#logout-btn').click(function () {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '<%=BASE_URL%>logout'; // Redirect to login page
            }
        });

    </script>
</body>

</html>